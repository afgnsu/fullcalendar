<%= simple_form_for @calendar, remote: true do |f| %>
  <div class="form-inputs">
    <label><font color=red>*</font>&nbsp;標題</label>
    <%= f.input :title, maxlength: 4, label: false, placeholder: '← 最多4個字' %>
    <label><font color=red>*</font>&nbsp;時間範圍</label>
    <%= f.input :date_range, label: false, input_html: { class: "form-control input-sm date-range-picker" } %>

    <%= f.input_field :start, as: :hidden, value: Date.yesterday, class: 'form-control input-sm start_hidden' %>
    <%# f.input_field :start, as: :hidden, value: nil, class: 'form-control input-sm start_hidden' %>
    <%= f.input_field :end, as: :hidden, value: Date.today, class: 'form-control input-sm end_hidden' %>
    <%# f.input_field :end, as: :hidden, value: nil, class: 'form-control input-sm end_hidden' %>
    <%# f.input :color, as: :select, collection: [['2F展示間','#0069d9'],['2F大會議室','#c82333'], ['2F小會議室','#218838']], :prompt => '-請選擇-', label: '會議室' %>
    <label><font color=red>*</font>&nbsp;會議室</label>
    <%= f.input :color, label: false, as: :select, collection: [['2F展示間','#6BA5C1'],['2F大會議室','#FF3F3F'], ['2F小會議室','#3F9F3F'], ['其他','#FFBB3F']], :prompt => '- 請選擇 -' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, '送出', class: 'btn btn-primary' %>
    <%= link_to '刪除',
                calendar,
                method: :delete,
                class: 'btn btn-danger',
                data: { confirm: '確定要刪除嗎？' },
                remote: true unless @calendar.new_record? %>
  </div>
<% end %>
